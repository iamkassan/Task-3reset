<div class="container">
  <div class="row">
    <div class="col-md-3">
    <h2>User info</h2>
  <% if @user.profile_image.attached? %>
  <%= image_tag user.profile_image, size: "100x100" %>

 <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
    <tbody>
      <tr></tr>
    <h5>name</h5>
    <%= @user.name %>
    
    <h5>introduction</h5>
    <%= @user.introduction %>
    </tbody>
    <%= form_with model: @book do |f| %>
    <h2>New book</h2>
     <h4>Title</h4>
  <%= f.text_field :title  %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <nav>
  <%= f.submit 'Create Book' %>
  </nav>
    <% end %>


</div>



<div class="col-md-8 offset-md-1">
<table class="table table-sm user-index">
<h2>Users</h2>
<thead>
  <th>image</th>
  <th>name</th>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
 <td><% if @user.profile_image.attached? %>

  <%= image_tag user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    </td>
<td><%= user.name %></td>
</tr>
<% end %>

<% end %>
</tbody>
</table>
</div>
</div>
</div>