<div class="container">
 <h2>User info</h2>
 <%= form_with model: @user do |f| %>
 <h4>Name</h4>
 <%= f.text_field :name %>
 <h4>Image</h4>
  <%= image_tag book.profile_image, size: "100x100" %>
  <h4>Introduction</h4>
  <%= f.text_area :introduction %>
  <%= f.submit'Update User' %>
  <% end %>

</div>