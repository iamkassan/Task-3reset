<div class="container px-5 px-sm-0">
<div class="row">
 <div class="col-md-3">
<h2>User info</h2>
  <% if @user.profile_image.attached? %>
  <%= image_tag user.profile_image, size: "100x100" %>

 <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    <% end %>
    <tbody>
      <tr></tr>
    <h5>name</h5>
    <%= @user.name %>
    
    <h5>introduction</h5>
    <%= @user.introduction %>
    </tbody>
 
<%= form_with model: @book do |f| %>
<h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title  %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <nav>
  <%= f.submit 'Create Book' %>
  </nav>
<% end %>
</div>
