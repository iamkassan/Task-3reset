<h2>User info</h2>

<% if book.profile_image.attached? %>
    <%= profile_image_tag book.image, size: "200x200" %>
  <% else %>
    <%= profile_image_tag 'no_image', size: "200x200" %>
  <% end %>
  
<%= form_with model: Book do |f| %>
<h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title  %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <%= f.submit 'Create Book' %>
  <% end %>



