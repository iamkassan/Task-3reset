<div class="container px-5 px-sm-0">
<div class="row">
 <div class="col-md-3">
   
<h2>User info</h2>

<% if @book.profile_image.attached? %>

    <%= image_tag book.profile_image, size: "200x200" %>
  <% else %>
    <%= image_tag 'no_image', size: "200x200" %>
    <h5>name</h5>
    <%= @user.name %>
    <h5>introduction</h5>
    <%= @user.introduction %>
    
  <% end %>
 
<%= form_with model: @book do |f| %>
<h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title  %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <nav>
  <%= f.submit 'Create Book' %>
  </nav>
<% end %>
</div>

<div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <tr>
  <tbody>
  </tbody>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
  </tr>

<% @books.each do |book| %>
<tr>
<td><%= link_to user_path(book.user_id) do %></td>
</tr>
</table>
</div>
</div>