<div class="container px-5 px-sm-0">
<div class="row">
 <div class="col-md-3">
<h2>User info</h2>

<% if @book.profile_image.attached? %>

    <%= image_tag book.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image.jpg', size: "100x100" %>
    <h5>name</h5>
    <%= @user.name %>
    <h5>introduction</h5>
    <%= @user.introduction %>

  <% end %>

<%= form_with model: @book do |f| %>
<h2>New book</h2>
  <h4>Title</h4>
  <%= f.text_field :title  %>
  <h4>Opinion</h4>
  <%= f.text_field :body %>
  <nav>
  <%= f.submit 'Create Book' %>
  </nav>
  </div>
<% end %>

  <div class="row">
    <div class="col-md-8 offset-md-1">
<h2>Books</h2>
<table class="table table-hover table-inverse">
  <tr>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </tr>

<% @books.each do |book| %>
<tr>
  <td><% if @user.profile_image.attached? %>

  <%= image_tag user.profile_image, size: "100x100" %>
  <% else %>
    <%= image_tag 'no_image', size: "100x100" %>
    </td>
    <% end %> 
 <td><%= link_to book.title %></td> 
 <td><%= book.body %>,</td> 

  
</tr>

<% end %>
</table>
</div>
</div>
</div>
</div>